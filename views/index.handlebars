<h1>Eat-Da-Burger!</h1>
<div class="container">
  <div class="row">
    {{!-- For all the burgers that were yet to be devoured --}}

    <div class="display">
      <div class="col-md-4">
        <div class="form-display-group">
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devoured=false}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
        {{!-- For all the burgers that were devoured --}}
      </div>
      <div class="col-md-4">
        <div class="form-display-group-d">
          <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block devoured=true}}
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  {{!-- <h2>Add a new Burger</h2> --}}
  <form class="create-form">

    <div class="form-group">
      {{!-- <label for="burger_name">Burger Name:</label> --}}
      {{!-- <input type="textarea" class="form-control" id="burger_name" rows="5" cols="40" name="burger_name"> --}}
      <textarea class="form-control" rows="5" cols="40" id="burger_name" name="burger_name"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
    <h3>Enter a burger you want to eat Click the "Submit" button</h3>
  </form>
</div>